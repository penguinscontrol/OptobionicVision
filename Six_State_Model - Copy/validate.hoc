
//nrn_load_dll("nrnmech.dll")
load_file("nrngui.hoc")
load_proc("nrnmainmenu")

dt = 1e-3 // 1 microsecond resolution

tstop = 700 // how many milliseconds to stimulate

create soma, axon
v_init=-65 // V_rest for hodgkin-huxley

nums = 40
if (name_declared("x") == 5){
	nums = x
}

soma{
  nseg=1
  diam=18.97 // area matches grossman paper
  L=18.97
  Ra=150
  cm=1
	insert hh
}
soma_area = PI*soma.diam*soma.L*1e-4

objectvar stim
soma stim = new ChR2test(0.5)
stim.irrMag =nums //0.34
stim.delay = 100
stim.on_dur = 500
stim.off_dur = 100
stim.reps = 1


objectvar voltclamp
soma voltclamp = new SEClamp(0.5)
voltclamp.rs = 1e-5
voltclamp.dur1 = tstop
voltclamp.amp1 = 80


objref s1, s2, s3, s4, s5, s6
objref vsoma,lstim,isod,iopt
objref m,n,h

s1 = new Vector()
s2 = new Vector()
s3 = new Vector()
s4 = new Vector()
s5 = new Vector()
s6 = new Vector()

vsoma = new Vector()
lstim = new Vector()
isod = new Vector()
iopt = new Vector()

m = new Vector()
n = new Vector()
h = new Vector()


s1.record(&stim.s1)
s2.record(&stim.s2)
s3.record(&stim.s3)
s4.record(&stim.s4)
s5.record(&stim.s5)
s6.record(&stim.s6)

vsoma.record(&soma.v(.5))
lstim.record(&stim.irr)
isod.record(&soma.ina(0.5))

iopt.record(&stim.ilit)
iopt.mul(soma_area)

m.record(&soma.m_hh(0.5))
n.record(&soma.n_hh(0.5))
h.record(&soma.h_hh(0.5))

run()

objref fobj
fobj = new File()

fobj.wopen("s1.dat")
s1.vwrite(fobj)
fobj.close()
fobj.wopen("s2.dat")
s2.vwrite(fobj)
fobj.close()
fobj.wopen("s3.dat")
s3.vwrite(fobj)
fobj.close()
fobj.wopen("s4.dat")
s4.vwrite(fobj)
fobj.close()
fobj.wopen("s5.dat")
s5.vwrite(fobj)
fobj.close()
fobj.wopen("s6.dat")
s6.vwrite(fobj)
fobj.close()

fobj.wopen("iopt.dat")
iopt.vwrite(fobj)
fobj.close()
fobj.wopen("isod.dat")
isod.vwrite(fobj)
fobj.close()

fobj.wopen("lstim.dat")
lstim.vwrite(fobj)
fobj.close()
fobj.wopen("vsoma.dat")
vsoma.vwrite(fobj)
fobj.close()

fobj.wopen("m.dat")
m.vwrite(fobj)
fobj.close()
fobj.wopen("n.dat")
n.vwrite(fobj)
fobj.close()
fobj.wopen("h.dat")
h.vwrite(fobj)
fobj.close()