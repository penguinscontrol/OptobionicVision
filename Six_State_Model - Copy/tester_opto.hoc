
//nrn_load_dll("nrnmech.dll")
load_file("nrngui.hoc")
load_proc("nrnmainmenu")

dt = 1e-3 // 1 microsecond resolution

tstop = 600 // how many milliseconds to stimulate

nums = 10
if (name_declared("x") == 5){
	nums = x
}
print nums
create soma, axon
v_init= -65 // V_rest for hodgkin-huxley
soma{
  nseg=1
  diam=18.97 // area matches grossman paper
  L=18.97
  Ra=150
  cm=1
	insert hh
}

soma_area = PI*soma.diam*soma.L*1e-4

axon{
  nseg=1
  diam=13.41
  L=13.41
  Ra=150
  cm=1
  cm=1
	insert hh
  }

/*
connect soma(1), axon(0)
*/

objectvar stim
soma stim = new ChR2test(0.5)
stim.gchr2_max = 20e-4
stim.irrMag = 40
stim.delay = 50
stim.on_dur = 500
stim.off_dur = 50
stim.reps = 1

objectvar stim2
axon stim2 = new ChR2test(0.5)

stim2.irrMag = 0
stim2.delay = 50
stim2.on_dur = 500
stim2.off_dur = 50
stim2.reps = 1

